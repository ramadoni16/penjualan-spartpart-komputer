<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spartpart"
    android:orientation="vertical"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Spartpart"
                android:textColor="@color/teal_200"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/GambarSpartpart"/>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="@color/teal_200"
                app:labelText="Kode Spartpart">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtKodeSpartpart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_200" />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:labelText="nama Spartpart ">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtNamaSpartpart"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:labelText="tahun Pembuatan">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtTahunPembuatan"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:labelText="MadeIn">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtMadeIn"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:labelText="spartpart Laptop">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtSpartpartLaptop"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:labelText="Harga">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtHargaSpartpart"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="@color/teal_200"
                app:labelText="Masukan Jumlah Pesanan">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edtJumlahPesanan"
                    android:textColor="@color/teal_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Jumlah Pesanan "
                android:id="@+id/TambahPesanan"
                android:textAllCaps="false"
                app:backgroundTint="@color/teal_200"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>